<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.snindustries.project.udacity.bake_o_bake.ui.recpiesteps.RecpieStepsFragment.RecipeStepsViewModel" />

        <variable
            name="handler"
            type="com.snindustries.project.udacity.bake_o_bake.HomeActivity.Handler" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/recpiesteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.recpiesteps.RecpieStepsFragment">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.recipe.name??`no recipe`}"
            tools:text="Nutella Pie"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>